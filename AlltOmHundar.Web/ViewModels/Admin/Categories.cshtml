@model IEnumerable<AlltOmHundar.Core.Models.Category>
@{
    ViewData["Title"] = "Hantera kategorier";
}

<h1>Hantera kategorier</h1>
<hr />

<div class="mb-3">
    <a asp-action="CreateCategory" class="btn btn-primary">Skapa ny kategori</a>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka till dashboard</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ordning</th>
                <th>Namn</th>
                <th>Beskrivning</th>
                <th>Antal ämnen</th>
                <th>Åtgärder</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@category.DisplayOrder</td>
                    <td><strong>@category.Name</strong></td>
                    <td>@category.Description</td>
                    <td>@category.Topics.Count</td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Redigera</a>
                        <a asp-action="CreateTopic" asp-route-categoryId="@category.Id" class="btn btn-sm btn-success">Nytt ämne</a>
                        <form asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Är du säker på att du vill ta bort denna kategori?');">
                            <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>