@model AlltOmHundar.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logga in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Logga in</h2>
        <hr />

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-post</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Logga in</button>
            <a asp-action="Register" class="btn btn-link">Inget konto? Registrera dig</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}