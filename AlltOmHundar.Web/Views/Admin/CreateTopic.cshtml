@model AlltOmHundar.Web.ViewModels.CreateTopicViewModel
@{
    var category = ViewBag.Category as AlltOmHundar.Core.Models.Category;
    ViewData["Title"] = "Skapa ämne";
}

@if (category == null)
{
    <div class="alert alert-danger">
        <p>Kategori hittades inte</p>
    </div>
    return;
}

<h1>Skapa nytt ämne i @category.Name</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateTopic" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Titel</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Beskrivning</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Skapa ämne</button>
            <a asp-action="Categories" class="btn btn-secondary">Avbryt</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}