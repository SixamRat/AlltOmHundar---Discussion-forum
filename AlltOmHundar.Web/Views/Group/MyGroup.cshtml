@model IEnumerable<AlltOmHundar.Core.Models.Group>
@using AlltOmHundar.Web.Helpers
@{
    ViewData["Title"] = "Mina grupper";
    var invites = ViewBag.Invites as IEnumerable<AlltOmHundar.Core.Models.GroupInvitation>;
    var currentUserId = SessionHelper.GetUserId(Context.Session);
}

<h2>Mina grupper</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}
@if (TempData["SuccessMessage"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<div class="mb-3">
    <a asp-action="Browse" class="btn btn-primary">Upptäck grupper</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5>Skapa ny grupp</h5>
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-2">
                <input name="name" class="form-control" placeholder="Gruppnamn (måste vara unikt)" required />
            </div>
            <div class="mb-2">
                <input name="description" class="form-control" placeholder="Beskrivning (valfritt)" />
            </div>
            <button type="submit" class="btn btn-primary">Skapa grupp</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h5>Mina grupper</h5>
        @if (Model != null && Model.Any())
        {
            @foreach (var g in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6>@g.Name</h6>
                                @if (!string.IsNullOrEmpty(g.Description))
                                {
                                    <p class="small text-muted mb-2">@g.Description</p>
                                }
                                <p class="small text-muted mb-0">@g.Members.Count medlem(mar)</p>
                            </div>
                            @if (g.CreatedByUserId == currentUserId)
                            {
                                <span class="badge bg-primary">Ägare</span>
                            }
                        </div>
                        <div class="mt-2">
                            <a class="btn btn-sm btn-primary" asp-action="Read" asp-route-id="@g.Id">Öppna chatt</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Members" asp-route-id="@g.Id">Medlemmar</a>
                            @if (g.CreatedByUserId == currentUserId)
                            {
                                <form asp-action="Delete" asp-route-id="@g.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Är du säker på att du vill radera denna grupp? Detta går inte att ångra.')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">Radera</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Du är inte med i några grupper än.</p>
        }
    </div>

    <div class="col-md-6">
        <h5>Inbjudningar</h5>
        @if (invites != null && invites.Any())
        {
            @foreach (var i in invites)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <h6>@i.Group?.Name</h6>
                        <p class="small mb-2">
                            Inbjuden av @(i.InvitedByUser?.Username ?? "Okänd användare")
                        </p>
                        <form asp-action="Accept" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="invitationId" value="@i.Id" />
                            <button class="btn btn-sm btn-success">Acceptera</button>
                        </form>
                        <form asp-action="Decline" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="invitationId" value="@i.Id" />
                            <button class="btn btn-sm btn-secondary">Avböj</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Inga inbjudningar.</p>
        }
    </div>
</div>